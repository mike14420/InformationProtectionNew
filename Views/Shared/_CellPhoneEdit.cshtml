@model InformationProtection.Models.CellPhoneViewData

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{

    @Html.Hidden("EmpID", ViewData["EmpID"]);
    @Html.Hidden("RequestorId", Model.IpRequestorId);
    @Html.Hidden("RequestId", Model.RequestId);
    @Html.Hidden("CellPhoneReqId", Model.CellPhoneReqId)
    @Html.ValidationSummary()

    
    <fieldset style="width: 96%">
        <legend>CellPhone Request</legend>

        <table class="Table1Format">
            <tr style="height: 100px">
                <td class="Request" colspan="4">This form is a request for mobile device use and/or syncing to internal Renown Health information 
                    for a Renown Health <u>exempt</u> employee who requires this access to fulfill their professional responsibilities on behalf of Renown. 
                    In order to obtain mobile device use and/or syncing access, 
                    the employee must complete this form, have it approved by his/her management, 
                    and submit it to the Renown Health Chief Financial Officer, Information Protection Director, 
                    and Chief Information Officer for approval. Once all approvals have been received, 
                    the document will be contained in the employee’s HR file and a copy resident in the immediate supervisor’s employee file. 
                    All access is subject to Renown Health policies and procedures.
                </td>
            </tr>

            <tr>
                <td colspan="1">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Make)
                    </div>
                </td>
                <td colspan="1" style="text-align: left">
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Make)
                        @Html.ValidationMessageFor(model => model.Make, "*")
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="1">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Model)
                    </div>
                </td>
                <td colspan="1" style="text-align: left">
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Model)
                        @Html.ValidationMessageFor(model => model.Model, "*")
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <table class="box1">
                        <tr>
                            <td style="background-color: #D4D0C8; text-align: left" colspan="2">
                                <strong>Business justification: </strong>
                                Please specify the job duties that require 
                                mobile device use and/or syncing to Renown information, 
                                how this access will support your work, 
                                and how your work will be impacted without it.
                            </td>
                        </tr>
                        <tr>
                            <td style="background-color: antiquewhite; text-align: left" colspan="2">
                                @Html.TextArea("BusJustification", new { style = "width:700px" })
                                @Html.ValidationMessageFor(model => model.BusJustification, "*")
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="4" style="text-align: left; vertical-align: top">
                    @Html.CheckBox("SecuredAck1")
                    I verify that everything written 
                   herein is true to the best of my knowledge. 
                    I realize that mobile device use and access to Renown Health computer systems and information assets are a privilege and are monitored and subject to 
                    Renown Health’s policies and procedures concerning professional 
                    use of computers and information systems, and 
                    <strong>RENOWN.IRP.210 Mobile Device Usage Policy</strong>.

                </td>
            </tr>
            <tr>
                <td colspan="4" style="text-align: left; vertical-align: top">
                    @Html.CheckBox("SecuredAck2")
                    I understand that non-compliance with Renown Health Policies may result in immediate termination of my 
                   Cell device usage. 
                   In addition, this action may occur with Renown Health employment termination.

                </td>
            </tr>
            <tr>
                <td colspan="4" style="text-align: left; vertical-align: top; text-wrap: none; border: hidden">
                    @Html.CheckBox("SecuredAck3")
                    I understand I am responsible for: 
                </td>
            </tr>
            <tr>
                <td colspan="1" style="text-align: left; vertical-align: top; text-wrap: none; border: hidden; width: 150px">Logical security 
                     @Html.CheckBox("SecuredAck4")
                </td>
                <td colspan="1" style="text-align: left; vertical-align: top; text-wrap: none; border: hidden; width: 100px">Physical security
                    @Html.CheckBox("SecuredAck5")
                </td>

                <td colspan="1" style="text-align: left; vertical-align: top; text-wrap: none; border: hidden; width: 200px">Immediate Notification: loss/theft
                    @Html.CheckBox("SecuredAck6")
                </td>
            </tr>


            <tr></tr>
            <tr>
                <td style="text-align: left; vertical-align: top; text-wrap: none">
                    <strong>I request use of Cellular/Smart Phone:
                    </strong>
                </td>
            </tr>
            <tr>
                <td colspan="4" style="border: groove">

                    <table class="box1">
                        <tr>
                            <td style="text-align: center" colspan="2">
                                @Html.ValidationMessageFor(model => model.RenownOwnedType, "*")
                                @{
                                              bool cellNew = false;
                                              bool cellExisting = false;
                                              if (Model.RenownOwnedType != null)
                                              {
                                                  cellNew = Model.RenownOwnedType.ToLower() == "new";
                                                  cellExisting = Model.RenownOwnedType.ToLower() == "existing";
                                              }
                                }
                                <strong>Renown-Owned (Paid by Renown)
                                    <br />
                                    @Html.Label("New:")
                                    @Html.RadioButton("RadBtnRenownOwned", "New", cellNew)
                                    @Html.Label("Existing:")
                                    @Html.RadioButton("RadBtnRenownOwned", "Existing", cellExisting)
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 75px">
                                <strong>@Html.Label("Carrier:")</strong>
                            </td>
                            <td style="width: 200px">
                                @Html.TextBox("RenownOwnedCarrier", null, new { style = "width:200px" })
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 75px">
                                <strong>@Html.Label("Phone Number:")</strong>
                            </td>
                            <td style="width: 200px">
                                @Html.TextBox("RenownOwnedPhone", null, new { style = "width:200px" })
                            </td>

                        </tr>
                        <tr>
                            <td style="vertical-align: top; width: 75px">
                                <strong>Employee Signature:</strong>
                            </td>
                            <td>
                                @Html.TextBox("EmployeeSignature", null, new { style = "width:200px" })
                            </td>
                        </tr>
                        <tr>
                            <td style="vertical-align: top; width: 75px">
                                <strong>Date:</strong>
                            </td>
                            <td>
                                @Html.TextBox("SubmitDate", DateTime.Now, new { style = "width:200px", disabled = "true" })
                            </td>
                        </tr>


                    </table>
                </td>
            </tr>
        </table>
    </fieldset>
    
    <table class="Table1Format" style="width: 98%; border: 2px solid">
        <tr>
            <td style="font-size: 20px; font-weight: bold; text-align: center">Commit (Request is Complete)<input type="submit" name="submitButton" value=@Page.SubmitType />
            </td>

            <td style="font-size: 20px; font-weight: bold; text-align: center">Save for later (No Validation Performed)<input type="submit" name="submitButton" value="Save" />
            </td>
        </tr>
    </table>


}
